<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/widget_margin"
                android:background="#09C">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_trashcan_64dp" android:id="@+id/trashCanImage" android:layout_centerVertical="true" android:layout_centerInParent="true"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_small_pointer_24dp" android:id="@+id/pointerImage" android:layout_centerInParent="true"/>

</RelativeLayout>