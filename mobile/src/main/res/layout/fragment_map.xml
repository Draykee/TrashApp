<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.main.MapFragment">
    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/mapView" android:padding="5dp"/>
    <ImageButton
            app:srcCompat="@drawable/ic_edit_location_black_64dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addButton" android:layout_gravity="bottom|end" android:layout_margin="10dp" android:background="#00FFFFFF" android:tint="@color/colorGray" android:contentDescription="@string/description_map_edit"/>
</FrameLayout>